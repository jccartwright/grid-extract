{
    "env": {
        "browser": true,
        "es6": true,
        "amd": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "indent": ["warn", 4],
        "semi": ["error", "always"],
        // "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
        // "quotes": ["error", "double", { "avoidEscape": true, "allowTemplateLiterals": true }],
        "quotes": ["warn", "single"]
    }
}
